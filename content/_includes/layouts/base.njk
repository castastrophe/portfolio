<!doctype html>
<html lang="{{ metadata.language }}">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=yes">
    <title>{{ title or metadata.title }}</title>

    <meta name="description" content="{{ description or metadata.description }}">
    <meta name="keywords" content="{{ tags or metadata.tags | join(',') }}">
    <meta name="author" content="{{ author or metadata.author.name }}">
    <meta name="generator" content="{{ eleventy.generator }}">
    <link rel="shortcut icon" href="/img/favicon.ico" type="image/x-icon">

    <!-- Twitter Card data -->
    <meta name="twitter:card" content="{{ description or metadata.description }}">
    <meta name="twitter:site" content="@castastrophee">
    <meta name="twitter:title" content="{{ title or metadata.title }}">
    <meta name="twitter:description" content="{{ description or metadata.description }}">
    <meta name="twitter:creator" content="@castastrophee">
    <!-- Twitter Summary card images must be at least 120x120px -->
    <!--meta name="twitter:image" content="http://castastrophe.com/img/logo/casoncode-logo.jpg"-->

    <!-- Open Graph data -->
    <meta property="og:title" content="{{ title or metadata.title }}">
    <meta property="og:type" content="website">
    <meta property="og:url" content="http://allons-y.llc">
    <!--meta property="og:image" content="http://castastrophe.com/img/logo/casoncode-logo.jpg"-->
    <meta property="og:description" content="{{ description or metadata.description }}">
    <meta property="og:site_name" content="{{ title or metadata.title }}">
    <!-- meta property="fb:admins" content="Facebook numeric ID" /-->

    <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@shoelace-style/shoelace@2.0.0-beta.83/dist/themes/light.css" />
    <script type="module" src="https://cdn.jsdelivr.net/npm/@shoelace-style/shoelace@2.0.0-beta.83/dist/shoelace.js"></script>
  </head>
  <body>
    {% include "nav.njk" %}

    <main{% if templateClass %} class="{{ templateClass }}"{% endif %}>
      {{ content | safe }}
    </main>

    <footer>
      {% include "pagination.njk" %}
    </footer>

    <!-- Current page: {{ page.url | url }} -->
  </body>
</html>