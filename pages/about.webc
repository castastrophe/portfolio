<style>
    #consulting {
        --spacing--vertical: 20px;

        .content {
            font-size: 1.1em;
            max-inline-size: 100ch;
        }

        a-card {
            --spacing--vertical: 10px;
        }

        .bio {
            border-radius: var(--border-radius);
            padding-inline: 1em;
            background-color: color-mix(in srgb, var(--theme--color--surface) 80%, transparent);
            margin-block-start: 1em;

            &:not(:first-of-type) {
                margin-block-start: 2em;
            }

            .container {
                border-block-start: 1px solid var(--theme--color--ui-subtle);
                padding-block-start: 1em;
                display: flex;
                flex-flow: row wrap;
                gap: 2em;
                align-items: start;

                a-card {
                    text-align: center;
                    inline-size: min(250px, 100%);

                    [slot="footer"] {
                        font-size: .8em;
                        border-block-start: 1px solid color-mix(in srgb, var(--theme--color--ui-accent) 20%, transparent);
                        padding-block-start: .5em;
                        inline-size: 80cqi;
                        margin-inline: auto;
                    }
                }

                .content {
                    flex-grow: 1;
                    inline-size: calc(100% - 250px - 2em);
                    min-inline-size: min(50ch, 100%);
                }
            }
        }

        .projects,
        .presentations {
            --card--MaxInlineSize: min(365px, 100%);

            inline-size: 100%;

            .subheadline {
                margin-block: 1.5em .5em;
            }

            div[layout="row"] {
                font-size: .8em;
                display: flex;
                flex-flow: row wrap;
                gap: 1.25em;
                justify-content: start;
            }
        }

        .presentations {
            div:has(> iframe) {
                padding: 0;
                flex-grow: 0;
                margin-block-end: -7.5px;
            }

            iframe {
                aspect-ratio: 16 / 9;
                width: 100%;
                height: auto;
                position: relative !important;
            }
        }
    }
</style>

