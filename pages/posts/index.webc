---
layout: layouts/base.webc
eleventyExcludeFromCollections: true
---

<a-band padding="half" id="nav" layout="space-between">
    <a href="/" title="Return to the home page"><img src="/img/cartoon-self.png" alt="Animated caricature of the author" data-type="rounded"></a>
    <div>
        <h1 class="masthead"><span>[</span>&nbsp;Allons-Y&nbsp;<span>]</span></h1>
        <h2 class="headline">Cassondra Roberts | <a href="https://front-end.social/@castastrophe">@castastrophe</a></h2>
        <hr />
        <div class="social">
            <span class="social-icons">
                <a webc:for="social of site.social" class="social-icon" rel="me" :href="social.url"><span :class="`fab fa-${social.icon}`"></span></a>
            </span>
        </div>
    </div>
</a-band>

<a-band width="full" id="articles" padding="double" layout="auto-grid" style="--spacing--vertical: 2em;">
    <h2 class="title" slot="header" style="inline-size: 60ch; max-inline-size: 100%;">Articles</h2>
    <a-card bordered webc:for="article of collections.posts.toReversed()">
        <div slot="header">
            <h3 class="headline accent"><a @text="article.data.title" :href="article.url"></a></h3>
            <p class="date" @text="article.data.date.toLocaleDateString(site.language, { year: 'numeric', month: 'long', day: 'numeric' })"></p>
        </div>
        <p @text="article.data.description"></p>
        <p class="tags" slot="footer">
            <span class="tag" webc:for="tag of article.data.tags" @text="tag"></span>
        </p>
    </a-card>
</a-band>

<a-band padding="double" id="post-footer" layout="space-between">
    <aside role="note" style="max-inline-size: 50ch;">
        <p>Find these helpful? I'm available for full-time, consulting, speaking, or training - <a href="mailto:consulting@allons-y.llc">let's
                connect</a>!</p>
    </aside>
    <p class="promo">or...</p>
    <a href="https://www.buymeacoffee.com/castastrophe"><img src="https://cdn.buymeacoffee.com/buttons/v2/default-violet.png" alt="Buy me a coffee" style="height: 60px !important;width: 217px !important;" ></a>
</a-band>
